project gloglotto ;

using clang ;

lib gloglotto : [ glob source/*.cpp ]
	: <cxxflags>-std=c++11
	: <include>include
	: <linkflags>"-lGL -lGLEW -lglut"
	;

import testing ;

for name in [ glob tests/*.cpp ] {
	unit-test test::$(name:S=) : $(name)
		: <cxxflags>"-std=c++11 -Iinclude -Itests/amirite"
		: <library>gloglotto
		;
}
